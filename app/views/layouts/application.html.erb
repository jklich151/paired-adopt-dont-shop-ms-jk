<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%=csrf_meta_tags%>

    <%=stylesheet_link_tag    'application', media: 'all'%>
    <%=javascript_include_tag 'application'%>
  </head>

  <body>
    <%=link_to "Home", "/"%> <%=link_to "Pet Index", "/pets"%> <%=link_to "Shelter Index", "/shelters"%>
    <%=link_to "Favorites: #{favorite.total_count}", "/favorites"%>

    <% flash.each do |type, message| %>
      <p><h1> <%= message %> </h1></p>
    <% end %>

    <%=yield%>
  </body>
</html>
