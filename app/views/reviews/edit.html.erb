<%= form_tag("/shelters/#{@shelter_id}/reviews/#{@review.id}", method: :patch) do %>
  <h1>Edit</h1>
  <%= label_tag :title %><br>
  <%= text_field_tag 'title', @review.title, :required => true %><br/>
  <%= label_tag :rating %><br>
  <%= text_field_tag 'rating', @review.rating, :required => true %><br/>
  <%= label_tag :content %><br>
  <%= text_field_tag 'content', @review.content, :required => true %><br/>
  <%= label_tag :"picture (optional)" %><br>
  <%= text_field_tag 'picture', @review.picture %><br/>
  <%= submit_tag(value = "Save changes") %>
<% end %>
