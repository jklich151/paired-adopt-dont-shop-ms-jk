<% if @pets == nil %>
<p> "You have no pets in your favorites." </p>
<% else %>
<% @pets.each do |pet| %>
<section id= "pet-<%= pet.id %>">
  <%= image_tag("#{pet.image}", size: "300") %>
    <h2>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}"%></h2>
    <%= button_to "Remove From Favorites", "/favorites/#{pet.id}", method: :delete %>
</section>
<% end %>
<% end %>
