<% if @pets == nil %>
  <p> You have no pets in your favorites. </p>
<% else %>
  <% favorite.pets.each do |pet| %>
  <section id= "pet-<%= pet.id %>">
    <%= image_tag("#{pet.image}", size: "300") %>
      <h2>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}"%></h2>
      <%= button_to "Remove From Favorites", "/favorites/#{pet.id}", method: :delete %>
    </section>
    <% end %>
<% end %>

<% if @pets != nil %>
 <%= link_to "Remove all Favorites", "/favorites", method: :delete %>
 <%= link_to "Adopt Pets", "/applications/new" %>
<% end %>


<br>
<br>
<br>
<h3>Pets that have been applied for:</h3>
<% if @pets != nil %>
  <% @pets.with_applications.each do |pet| %>
      <h4><%= link_to "#{pet.name}", "/pets/#{pet.id}"%></h4><br>
  <% end %>
<% end %>
